{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [ "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["import", "unused-imports"],
    "semi": ["error", "always"],
    "quotes": "warn",
    "unused-imports/no-unused-imports": "error",
    "no-template-curly-in-string": "off"
  },
  "ignorePatterns": [
    "node_modules",
    "dist/",
    "tests/",
    "cdk/",
    "jest.config.ts",
    "tgMdkNode"
  ]
}
